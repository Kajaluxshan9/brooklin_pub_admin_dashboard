    { code: "+996", country: "Kyrgyzstan", flag: "ðŸ‡°ðŸ‡¬", shortName: "KG" },
    { code: "+998", country: "Uzbekistan", flag: "ðŸ‡ºðŸ‡¿", shortName: "UZ" },
    { code: "+992", country: "Tajikistan", flag: "ï¿½ðŸ‡¹ðŸ‡¯", shortName: "TJ" },
